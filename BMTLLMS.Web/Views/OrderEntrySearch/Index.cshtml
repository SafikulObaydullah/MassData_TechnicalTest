<div class="page-body pageBodyPaddingRemove">
    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Search Order Entry</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-4">
                        <div class="mb-3">
                            <label class="form-label">Order Code</label>
                            <input type="text" id="orderCode" class="form-control comboBox" placeholder="Enter Order" style="width:100%;height:38px;">
                        </div>
                    </div>

                    <div class="col-xl-4">
                        <div class="mb-3">
                            <label class="form-label">Order Date From </label>
                            <input type="date" id="orderDateFrom" class="form-control combobox Kdatepicker" style="width:100%;height:38px;" placeholder="From Date">
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="mb-3">
                            <label class="form-label">Order Date To </label>
                            <input type="date" id="orderDateTo" class="form-control combobox Kdatepicker" style="width:100%;height:38px;" placeholder="To Date">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-4">
                        <div class="mb-3">
                            <label class="form-label">Customer Name</label>
                            <input type="text" id="cmbCustomer" class="form-control comboBox" placeholder="Enter Customer Name" style="width:100%;height:38px;">
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="mb-3">
                            <label class="form-label">Delivery Date From </label>
                            <input type="date" id="deliveryDateFrom" class="form-control combobox Kdatepicker" style="width:100%;height:38px;" placeholder="MM/DD/YYYY">
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="mb-3">
                            <label class="form-label">Delivery Date To </label>
                            <input type="date" id="deliveryDateTo" class="form-control combobox Kdatepicker" style="width:100%;height:38px;" placeholder="MM/DD/YYYY">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-4">
                        <div class="mb-3" >
                            <a href="#" id="btnSearch" onclick="GetOrderEntryListtBySearch()" class="btn btn-primary d-none d-sm-inline-block">
                                Search
                            </a>
                        </div>
                    </div>
                </div>
            </div>
             <div class="page-body pageBodyPaddingRemove">
            <div class="container-xl">
            <div id="gridSearch" style="height: 500px;"></div>
            </div>
            </div>
        </div>
     </div>
</div>


