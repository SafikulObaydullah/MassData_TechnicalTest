@{
    Layout = null;
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>Sign in -Raven </title>
    <script defer data-api="/stats/api/event" data-domain="preview.tabler.io" src="/stats/js/script.js"></script>
    
    <!-- CSS files -->
    <link href="~/lib/theme/tabler/css/tabler.min.css" rel="stylesheet" />
    <link href="~/lib/theme/tabler/css/tabler-flags.min.css?1685973381" rel="stylesheet" />
    <link href="~/lib/theme/tabler/css/tabler-payments.min.css?1685973381" rel="stylesheet" />
    <link href="~/lib/theme/tabler/css/tabler-vendors.min.css?1685973381" rel="stylesheet" />
    <link href="~/lib/theme/tabler/css/demo.min.css?1685973381" rel="stylesheet" />
  </head>
  <body  class=" d-flex flex-column">
    <script src="~/lib/theme/tabler/js/demo-theme.min.js"></script>
    
    <div class="page page-center">
      <div class="container container-tight py-4">
        <div class="text-center mb-4">
          <a href="#" class="navbar-brand navbar-brand-autodark">  
              <img src="~/lib/theme/tabler/image/massdatapic.png" width="110" height="32" alt="Tabler" class="navbar-brand-image">
          </a>
        </div>
        <div class="card card-md">
          <div class="card-body">
            <h2 class="h2 text-center mb-4">Login to your account</h2>
             @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
            <form action="#" >
              <div class="mb-3">
                <label class="form-label">User Name</label>
                <input type="text" class="form-control" id="Username" tabindex="1" name="Username" value="" placeholder="Username" autocomplete="off">
              </div>
              <div class="mb-2">
                <label class="form-label">
                  Password
                  <span class="form-label-description" tabindex="3">
                    <a href="./forgot-password.html">I forgot password</a>
                  </span>
                </label>
                <div class="input-group input-group-flat">
                  <input type="password" class="form-control" id="Password" tabindex="2" name="Password" placeholder="Your password" autocomplete="off">
                  <span class="input-group-text">
                    <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip"><!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
                    </a>
                  </span>
                </div>
              </div>
              <div class="mb-2">
                <label class="form-check">
                  <input type="checkbox" class="form-check-input"/>
                  <span class="form-check-label">Remember me on this device</span>
                </label>
              </div>
              <div class="form-footer">
                <button type="submit" class="btn btn-primary w-100">Sign in</button>
              </div>
            </form>
            }
          </div>
         
        </div>
        <div class="text-center text-secondary mt-3">
                Developed by <a href="https://ravensystemsltd.com/" target="_blank" tabindex="-1">Raven Systems Ltd.</a>
        </div>
      </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="~/lib/theme/tabler/js/tabler.min.js"></script>
    <script src="~/lib/theme/tabler/js/demo.min.js?1685973381" defer></script>
  </body>
</html>